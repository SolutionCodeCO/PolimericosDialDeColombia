<title>Playlist {{playlist.id}}</title>
<link rel="stylesheet" href="/css/cursos-admin.css">

{{#if user}}

<body>
    <div class="sidebar">
        <div class="logo-details">
            <div class="logo_name">Polimericos Dial de CO</div>
            <i class="bx bx-menu" id="btn"></i>
        </div>
        <ul class="nav-list">
            <li>
                <i class="bx bx-search"></i>
                <input type="text" placeholder="buscar..." />
                <span class="tooltip">Buscar</span>
            </li>
            <li>
                <a href="/administrador">
                    <i class="bx bx-grid-alt"></i>
                    <span class="links_name">Dashboard</span>
                </a>
                <span class="tooltip">Dashboard</span>
            </li>
            <li>
                <a href="/administrador/aprendizaje">
                    <i class="fa-solid fa-graduation-cap"></i>
                    <span class="links_name">Aprendizaje</span>
                </a>
                <span class="tooltip">Aprendizaje</span>
            </li>
            <li>
                <a href="/administrador/usuarios">
                    <i class="bx bx-user"></i>
                    <span class="links_name">Usuarios</span>
                </a>
                <span class="tooltip">Usuarios</span>
            </li>
            <li>
                <a href="/administrador/testimonios">
                    <i class="bx bx-chat"></i>
                    <span class="links_name">Testimonios</span>
                </a>
                <span class="tooltip">Testimonios</span>
            </li>
            <li>
                <a href="/administrador/contacto">
                    <i class="bx bx-pie-chart-alt-2"></i>
                    <span class="links_name">Contacto</span>
                </a>
                <span class="tooltip">Contacto</span>
            </li>

            <li class="profile">
                <div class="profile-details">

                    <div class="name_job">
                        <div class="name">{{user.nombre}}</div>
                        <div class="job">{{user.email}}</div>
                    </div>
                </div>
                <a href="/logout"> <i class="bx bx-log-out" id="log_out"></i></a>
            </li>
        </ul>
    </div>
    <section class="home-section">
        <section class="contenedor-cursos">
            <div class="header-list-cursos">
                <h4>{{playlist.nombre}}</h4>

                <button id="open">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                        stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M13.5 3H12H8C6.34315 3 5 4.34315 5 6V18C5 19.6569 6.34315 21 8 21H11M13.5 3L19 8.625M13.5 3V7.625C13.5 8.17728 13.9477 8.625 14.5 8.625H19M19 8.625V11.8125"
                            stroke="#fffffff" stroke-width="2"></path>
                        <path d="M17 15V18M17 21V18M17 18H14M17 18H20" stroke="#fffffff" stroke-width="2"
                            stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                    Añadir Cursos
                </button>
            </div>

            <div class="tarjeta-busqueda">

                <div class="container-input">
                    <input type="search" placeholder="Busca algun curso" name="text" class="input1">
                    <svg fill="#000000" width="20px" height="20px" viewBox="0 0 1920 1920"
                        xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M790.588 1468.235c-373.722 0-677.647-303.924-677.647-677.647 0-373.722 303.925-677.647 677.647-677.647 373.723 0 677.647 303.925 677.647 677.647 0 373.723-303.924 677.647-677.647 677.647Zm596.781-160.715c120.396-138.692 193.807-319.285 193.807-516.932C1581.176 354.748 1226.428 0 790.588 0S0 354.748 0 790.588s354.748 790.588 790.588 790.588c197.647 0 378.24-73.411 516.932-193.807l516.028 516.142 79.963-79.963-516.142-516.028Z"
                            fill-rule="evenodd"></path>
                    </svg>
                </div>

                <div class="cantidad">
                    Cantidad de cursos: <span>{{contador_cursos}}</span>
                </div>
            </div>

            <div class="bloque">
                {{#if cursos.length}}
                {{#each cursos}}
                <a href="{{enlace}}" target="_blank">
                <div class="card">
                    <div class="first-content">
                        <div class="image">
                            <div class="precio">
                                <span>{{precio_Curso}}</span>
                            </div>
                            <img src="/img/login-r.webp" alt="" />
                        </div>
                        <div class="titulo">
                            <h2>{{titulo}}</h2>
                            <p>{{descripcion}}</p>
                        </div>
                        <div class="opciones_list">
                            <a href="/administrador/playlist/{{../playlist.id}}/delete-curso/{{this.id}}"
                                onclick="return confirm('¿Estás seguro de que quieres eliminar este curso?');"><i
                                    class="fa-solid fa-trash"></i></a>
                            <a href="/aprendizaje/editar/cursos/{{id}}"><i class="fa-solid fa-pen-to-square"></i></a>
                        </div>
                    </div>
                </div>
                </a>
                {{/each}}

            </div>

            {{else}}
            <div class="empty-list">
                <div class="icon-list">
                    <i class="fa-regular fa-circle-xmark"></i>
                </div>

                <p>Oh... No hay cursos en esta PlayList. </p>
            </div>

            {{/if}}
        </section>

        <div id="modal_container" class="modal-container">
            <div class="modal">
                <div class="titulos">
                    <div class="loader"></div>
                    <h1>Añadir cursos a esta playlist</h1>
                </div>

                <p>
                    Llena correctamente el formulario para crear correctamente el curso.
                </p>
                <br>
                <form action="/administrador/playlist/{{playlist.id}}/add-curso" method="post">

                    <div class="input-group">
                        <label class="label">Enlace:</label>
                        <input autocomplete="off" name="enlace" id="Email" class="input" type="text">
                    </div>
                    <div class="input-group">
                        <label class="label">Titulo:</label>
                        <input autocomplete="off" name="titulo" id="Email" class="input" type="text">
                    </div>
                    <div class="input-group">
                        <label class="label">descripción:</label>
                        <input autocomplete="off" name="descripcion" id="Email" class="input" type="text">
                    </div>
                    <div class="input-group">
                        <label class="label">Precio:</label>
                        <input autocomplete="off" name="precio_Curso" id="Email" class="input" type="text">
                    </div>


                    <div class="grupo-btn-modal">
                        <a id="close" type="reset">Cancelar</a>
                        <button>
                            <div class="svg-wrapper-1">
                                <div class="svg-wrapper">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                                        <path fill="none" d="M0 0h24v24H0z"></path>
                                        <path fill="currentColor"
                                            d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z">
                                        </path>
                                    </svg>
                                </div>
                            </div>
                            <span>Crear</span>
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </section>

    <script src="/js/admin.js"></script>
    <script src="/js/cursos_Create.js"></script>
</body>
{{else}}
<div class="empty-list">
    <div class="icon-list">
        <i class="fa-regular fa-circle-xmark"></i>
    </div>

    <p>Oh, oh Debes <a href="/autenticacion">iniciar sesion</a> primero </p>
</div>

{{/if}}